<div class="mt-4">
    <h3>Web Admin</h3>
    <form method="POST" action="/courses/admin">

        <div class="form-group">
            <label for="type">Type</label>
            <select class="form-control" id="type" name="type">
                <option value="novel">Novel</option>
                <option value="video">Video</option>
            </select>
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group" id="description-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>

        <div class="form-group" id="videoId-group" style="display: none;">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Add Data</button>
    </form>
</div>

<script>
    document.getElementById('type').addEventListener('change', function() {
        var videoIdGroup = document.getElementById('videoId-group');
        if (this.value === 'video') {
            videoIdGroup.style.display = 'block';
        } else {
            videoIdGroup.style.display = 'none';
        }
    });
</script>
