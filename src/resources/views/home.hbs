<div class="mt-4">
    <div class="container">
        <div class="row">
            {{#each courses}}
                <div class="col-sm-3 col-lg-3 mb-4">
                    <div class="card card-course-item">
                        <a href="/courses/{{this.slug}}">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}} ">            
                        </a>
                        <div class="card-body card-body-item">
                            <a href="/courses/{{this.slug}}">
                                <h5 class="card-title">{{this.name}}</h5>
                            </a>
                            <p class="card-text">{{this.description}}</p>
                            <a href="/courses/{{this.slug}}" class="btn btn-primary">Read Now</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
